@model DOANCOSO.Models.FlashCard
@{
    ViewData["Title"] = "Xóa Flashcard";
}

<div class="container mt-4">
    <h2>Xác nhận xóa</h2>

    <div class="alert alert-danger">
        Bạn có chắc chắn muốn xóa Flashcard này?
    </div>

    <div class="card mb-4">
        <div class="row g-0">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Word">
                }
                else
                {
                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 100%;">
                        <span class="text-muted">Không có hình ảnh</span>
                    </div>
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">@Model.Word</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Định nghĩa:</dt>
                        <dd class="col-sm-9">@Model.Definition</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>