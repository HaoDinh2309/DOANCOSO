@model IEnumerable<DOANCOSO.Models.FlashCard>
@{
    ViewData["Title"] = "Flashcards";
}

<div class="container mt-4">
    <h2>Danh sách Flashcards</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Tạo mới Flashcard</a>
    </p>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Chưa có Flashcard nào. Hãy tạo Flashcard mới!
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Word" style="height: 200px; object-fit: contain;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <span class="text-muted">Không có hình ảnh</span>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@item.Word</h5>
                            <p class="card-text">@item.Definition</p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Chi tiết</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Xóa</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>